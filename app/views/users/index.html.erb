<%= render "layouts/view_header", resource: @users.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
    <tr>
      <th>Email</th>
      <th>Person</th>
      <th>Permission level</th>
      <th>Edit</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.person&.name %> <%= show_button(user.person, "View Profile", "fa fa-user-circle")  if user.person %></td>
        <td><%= user.role.titleize %></td>
        <td><%= edit_button(user) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
